<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/iv_operation_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_income"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_operation_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Зарплата"
        android:textColor="@color/colorHomeText"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_operation_type"
        app:layout_constraintStart_toEndOf="@id/iv_operation_type"
        app:layout_constraintTop_toTopOf="@id/iv_operation_type" />

    <TextView
        android:id="@+id/tv_operation_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+22222"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_operation_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/tv_operation_description"
        app:layout_constraintTop_toTopOf="@id/iv_operation_type" />

</androidx.constraintlayout.widget.ConstraintLayout>
