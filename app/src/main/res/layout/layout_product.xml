<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/pic_cup"
        app:layout_constraintBottom_toBottomOf="@id/tv_product_name"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_product_price" />

    <TextView
        android:id="@+id/tv_product_price"
        style="@style/PaymentTextAppearance.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_medium"
        android:maxLines="1"
        android:text="@string/product_price"
        app:layout_constraintBottom_toTopOf="@id/tv_product_name"
        app:layout_constraintEnd_toStartOf="@id/iv_decrement"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iv_product_image"
        app:layout_constraintTop_toBottomOf="@id/tv_product_name"
        app:layout_constraintTop_toTopOf="@id/iv_decrement" />

    <TextView
        android:id="@+id/tv_product_name"
        style="@style/PaymentTextAppearance.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/product_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_decrement"
        app:layout_constraintEnd_toStartOf="@id/iv_decrement"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/tv_product_price"
        app:layout_constraintTop_toBottomOf="@id/tv_product_price" />

    <ImageView
        android:id="@+id/iv_decrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_decrement_product_count"
        android:tint="@color/colorPaymentPrimary"
        app:layout_constraintBottom_toBottomOf="@id/iv_increment"
        app:layout_constraintEnd_toStartOf="@id/tv_product_count"
        app:layout_constraintTop_toTopOf="@id/iv_increment" />

    <TextView
        android:id="@+id/tv_product_count"
        style="@style/PaymentTextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@id/iv_increment"
        app:layout_constraintEnd_toStartOf="@id/iv_increment"
        app:layout_constraintTop_toTopOf="@id/iv_increment" />

    <ImageView
        android:id="@+id/iv_increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_increment_product_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
